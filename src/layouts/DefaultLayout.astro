---
// ビュートランジション
// https://docs.astro.build/ja/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions'

import Header from '@/layouts/Header.astro'
import Main from '@/layouts/Main.astro'
import Footer from '@/layouts/Footer.astro'

interface Props {
  title: string
  htmlClass?: string | undefined
}

const { title, htmlClass } = Astro.props

import '@/scss/foundation/foundation.scss'
---

<!doctype html>
<html lang="ja" class={htmlClass ?? htmlClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon.svg" />
    <title>{title}</title>
    <slot name="head-additional" />
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <Main>
      <slot />
    </Main>
    <Footer />
  </body>
</html>
