---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon.svg" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>{title}</title>
    <style is:inline>
      h1 {
        text-align: center;
        font-size: 3rem;
        font-weight: bold;
        padding: 1em 0;
      }
      .logo {
        width: fit-content;
        margin: 0 auto;
      }
      .logo img {
        width: 200px;
        height: auto;
      }
      h2 {
        text-align: center;
        font-size: 2.4rem;
        font-weight: bold;
        padding: 1em 0;
      }
    </style>
    <slot name="head" />
  </head>
  <body>
    <slot name="header">
      <header class="l-header">
        <h1>My Astro Template</h1>
      </header>
    </slot>
    <main class="l-main">
      <slot />
    </main>
    <slot name="footer">
      <footer class="l-footer">
        <h2>footer</h2>
      </footer>
    </slot>
  </body>
</html>
